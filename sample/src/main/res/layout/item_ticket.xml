<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:gravity="center_vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_title"
        android:layout_marginLeft="@dimen/medium_margin"
        android:layout_marginTop="@dimen/medium_margin"
        android:layout_marginRight="@dimen/medium_margin"
        android:textSize="@dimen/text_only_list_primary_text_size"
        android:textColor="@color/dark_text_primary_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/text_description"
        android:layout_marginLeft="@dimen/medium_margin"
        android:layout_marginBottom="@dimen/text_padding"
        android:layout_marginRight="@dimen/medium_margin"
        android:textSize="@dimen/text_only_list_secondary_text_size"
        android:textColor="@color/dark_text_secondary_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>